<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>


    <!--  Button Pane Layouts -->

    <style name="LinearLayout_Horizontal_ButtonPane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonPaneBase" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:text">@string/placeholder_button_text</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="ButtonPaneBaseLight" parent="ButtonPaneBase">
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="Linearlayout_ButtonBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonImage">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonImageSmall" parent="ButtonImage">
        <item name="android:layout_width">80dp</item>
    </style>



    <!-- Primary Button 1 -->
    <style name="Linearlayout_ButtonPrimary1" parent="Linearlayout_ButtonBase">
        <item name="android:background">@color/colorButtonPrimary1</item>
    </style>


    <!-- Primary Button 2 -->
    <style name="Linearlayout_ButtonPrimary2" parent="Linearlayout_ButtonBase">
        <item name="android:background">@color/colorButtonPrimary2</item>
    </style>


    <!-- Danger Button -->
    <style name="Linearlayout_ButtonDanger" parent="Linearlayout_ButtonBase">
        <item name="android:background">@color/colorButtonDanger</item>
    </style>


    <!-- Confirm Button -->
    <style name="Linearlayout_ButtonConfirm" parent="Linearlayout_ButtonBase">
        <item name="android:background">@color/colorButtonConfirm</item>
    </style>


    <!-- Control Button -->
    <style name="Linearlayout_ButtonControl" parent="Linearlayout_ButtonBase">
        <item name="android:background">@color/colorButtonControl</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="ButtonPaneControl" parent="ButtonPaneBase">
        <item name="android:textSize">20dp</item>
    </style>



    <!-- Page Header -->
    <style name="HeaderStyle">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondaryAccent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="HeaderRobotNameStyle" parent="HeaderStyle">
        <item name="android:background">@drawable/header_robot_name</item>
    </style>

</resources>